generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  password String
  isAuthor Boolean
  posts    Post[]
  comments Comment[]
}

model Post {
  id          String    @id @default(uuid())
  title       String
  text        String
  isPublished Boolean
  User        User      @relation(fields: [userId], references: [id])
  userId      String
  comments    Comment[]
  created     DateTime  @default(now())
}

model Comment {
  id      String   @id @default(uuid())
  text    String
  User    User     @relation(fields: [userId], references: [id])
  userId  String
  Post    Post     @relation(fields: [postId], references: [id])
  postId  String
  created DateTime @default(now())
}
